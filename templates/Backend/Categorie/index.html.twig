{% extends 'base.html.twig' %}

{% block title %}
	Administration des Categorie
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des catégories</h1>
		<a href="{{ path('admin.categories.create') }}" class="btn btn-primary my-2">Créer une catégorie</a>
		<div class="row mt-2 gy-4">
			{% for categorie in categories %}
				<div class="col-md-3">
					<div class="card">
						<div class="card-body">
							<h2 class="card-title">{{ categorie.name }}</h2>
							<div class="form-check form-switch">
								<input class="form-check-input" type="checkbox" id="switch-categorie-{{ categorie.id }}" data-switch-categorie-id="{{ categorie.id }}" {{ categorie.enable ? 'checked' }}/>
								<label class="form-check-label" for="switch-categorie-{{ categorie.id }}">{{ categorie.enable ? 'Actif' : 'Inactif' }}</label>
							</div>
							<div class="mt-2 d-flex justify-content-between flex-wrap">
								<a href="#" class="btn btn-warning">Modifier</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
